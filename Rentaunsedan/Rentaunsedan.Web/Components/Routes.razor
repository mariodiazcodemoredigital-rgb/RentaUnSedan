@using Rentaunsedan.Web.Components.Account.Shared

<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.DashboardLayout)" >
            <NotAuthorized>
                @if (!context.User.Identity?.IsAuthenticated ?? true)
                {
                    <RedirectToLogin />
                }
                else
                {
                    <p>No tienes permisos para acceder a esta página.</p>
                }
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <RedirectToLogin />
    </NotFound>
</Router>
</CascadingAuthenticationState>
